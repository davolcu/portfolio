---
import Layout from '../layouts/Layout.astro';
import ParticleBackground from '../components/ParticleBackground.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Mail, Linkedin, Github, ArrowLeft } from '@lucide/astro';
---

<Layout title='Contact - David Olmos'>
    <ParticleBackground />
    <Header currentPage='contact' />

    <!-- Contact Hero Section -->
    <section class='pt-32 pb-20 bg-gradient-to-b from-black to-gray-900'>
        <div class='max-w-6xl mx-auto px-4 sm:px-6 lg:px-8'>
            <div class='text-center mb-16'>
                <a
                    href='/'
                    class='inline-flex items-center gap-2 text-purple-400 hover:text-purple-300 mb-8 transition-colors'
                >
                    <ArrowLeft class='w-5 h-5' />
                    Back to Home
                </a>
                <h1 class='text-5xl md:text-7xl font-bold mb-6'>
                    <span class='gradient-text' transition:name='main-heading'>Let's Work Together</span>
                </h1>
                <p class='text-xl text-gray-400 max-w-2xl mx-auto'>
                    Ready to bring your ideas to life? Let's create something amazing together.
                </p>
                <div class='w-24 h-1 bg-gradient-to-r from-purple-600 to-blue-600 mx-auto mt-8'></div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class='py-20 bg-gradient-to-b from-gray-900 to-black'>
        <div class='max-w-4xl mx-auto px-4 sm:px-6 lg:px-8'>
            <div class='text-center'>
                <div class='max-w-2xl mx-auto space-y-8'>
                    <h2 class='text-3xl font-bold gradient-text mb-6'>Get In Touch</h2>
                    <p class='text-xl text-gray-300 leading-relaxed mb-12'>
                        I'm always interested in new opportunities and exciting projects. Whether you have a question or
                        just want to say hi, feel free to reach out through any of the channels below!
                    </p>

                    <div class='grid sm:grid-cols-3 gap-8'>
                        <a
                            href='mailto:davidolmoscubells@gmail.com'
                            class='flex flex-col items-center space-y-4 p-6 bg-gradient-to-br from-purple-600/10 to-blue-600/10 rounded-2xl border border-white/10 hover:border-purple-400/30 transition-all duration-300 hover:scale-105 group'
                        >
                            <div
                                class='w-16 h-16 bg-gradient-to-r from-purple-600 to-blue-600 rounded-full flex items-center justify-center group-hover:from-purple-500 group-hover:to-blue-500 transition-all duration-300'
                            >
                                <Mail class='w-8 h-8 text-white' />
                            </div>
                            <div class='text-center'>
                                <p
                                    class='font-semibold text-white text-lg mb-2 group-hover:text-purple-300 transition-colors'
                                >
                                    Email
                                </p>
                                <p class='text-gray-400 group-hover:text-purple-400 transition-colors text-sm'>
                                    Click here
                                </p>
                            </div>
                        </a>

                        <a
                            href='https://www.linkedin.com/in/david-olmos-b99452138/'
                            target='_blank'
                            rel='noopener noreferrer'
                            class='flex flex-col items-center space-y-4 p-6 bg-gradient-to-br from-purple-600/10 to-blue-600/10 rounded-2xl border border-white/10 hover:border-purple-400/30 transition-all duration-300 hover:scale-105 group'
                        >
                            <div
                                class='w-16 h-16 bg-gradient-to-r from-purple-600 to-blue-600 rounded-full flex items-center justify-center group-hover:from-purple-500 group-hover:to-blue-500 transition-all duration-300'
                            >
                                <Linkedin class='w-8 h-8 text-white' />
                            </div>
                            <div class='text-center'>
                                <p
                                    class='font-semibold text-white text-lg mb-2 group-hover:text-purple-300 transition-colors'
                                >
                                    LinkedIn
                                </p>
                                <p class='text-gray-400 group-hover:text-purple-400 transition-colors'>David Olmos</p>
                            </div>
                        </a>

                        <a
                            href='https://github.com/davolcu'
                            target='_blank'
                            rel='noopener noreferrer'
                            class='flex flex-col items-center space-y-4 p-6 bg-gradient-to-br from-purple-600/10 to-blue-600/10 rounded-2xl border border-white/10 hover:border-purple-400/30 transition-all duration-300 hover:scale-105 group'
                        >
                            <div
                                class='w-16 h-16 bg-gradient-to-r from-purple-600 to-blue-600 rounded-full flex items-center justify-center group-hover:from-purple-500 group-hover:to-blue-500 transition-all duration-300'
                            >
                                <Github class='w-8 h-8 text-white' />
                            </div>
                            <div class='text-center'>
                                <p
                                    class='font-semibold text-white text-lg mb-2 group-hover:text-purple-300 transition-colors'
                                >
                                    GitHub
                                </p>
                                <p class='text-gray-400 group-hover:text-purple-400 transition-colors'>@davolcu</p>
                            </div>
                        </a>
                    </div>

                    <div
                        class='mt-12 p-6 bg-gradient-to-br from-purple-600/5 to-blue-600/5 rounded-2xl border border-white/5'
                    >
                        <p class='text-gray-300 text-center'>
                            Feel free to reach out if you'd like to collaborate on a project, discuss opportunities, or
                            just have a chat about technology and development. I'm always excited to connect with fellow
                            developers and potential clients!
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <Footer />
</Layout>
