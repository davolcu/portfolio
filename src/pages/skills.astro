---
import Layout from '../layouts/Layout.astro';
import ParticleBackground from '../components/ParticleBackground.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title='Skills - David Olmos'>
    <ParticleBackground />

    <Header currentPage='skills' />

    <!-- Skills Hero Section -->
    <section class='pt-32 pb-20 bg-gradient-to-b from-black to-gray-900'>
        <div class='max-w-6xl mx-auto px-4 sm:px-6 lg:px-8'>
            <div class='text-center mb-16'>
                <h1 class='text-5xl md:text-7xl font-bold mb-6'>
                    <span class='gradient-text' transition:name='main-heading'>Skills & Technologies</span>
                </h1>
                <p class='text-xl text-gray-400 max-w-2xl mx-auto'>
                    A comprehensive overview of my technical expertise and the technologies I work with.
                </p>
                <div class='w-24 h-1 bg-gradient-to-r from-purple-600 to-blue-600 mx-auto mt-8'></div>
            </div>
        </div>
    </section>

    <!-- Skills Section -->
    <section class='py-20 bg-black'>
        <div class='max-w-6xl mx-auto px-4 sm:px-6 lg:px-8'>
            <div class='grid md:grid-cols-3 gap-8'>
                <!-- Frontend -->
                <div
                    class='bg-gradient-to-br from-purple-600/10 to-purple-800/10 p-8 rounded-2xl border border-purple-500/20 hover:border-purple-500/40 transition-all duration-300'
                >
                    <h3 class='text-2xl font-bold mb-6 gradient-text'>Frontend</h3>
                    <div class='space-y-3'>
                        <div class='flex items-center justify-between'>
                            <span class='text-gray-300'>Vue / Nuxt</span>
                            <div class='w-24 bg-gray-700 rounded-full h-2'>
                                <div
                                    class='bg-gradient-to-r from-purple-600 to-blue-600 h-2 rounded-full'
                                    style='width: 100%'
                                >
                                </div>
                            </div>
                        </div>
                        <div class='flex items-center justify-between'>
                            <span class='text-gray-300'>React / Next</span>
                            <div class='w-24 bg-gray-700 rounded-full h-2'>
                                <div
                                    class='bg-gradient-to-r from-purple-600 to-blue-600 h-2 rounded-full'
                                    style='width: 80%'
                                >
                                </div>
                            </div>
                        </div>
                        <div class='flex items-center justify-between'>
                            <span class='text-gray-300'>Svelte</span>
                            <div class='w-24 bg-gray-700 rounded-full h-2'>
                                <div
                                    class='bg-gradient-to-r from-purple-600 to-blue-600 h-2 rounded-full'
                                    style='width: 70%'
                                >
                                </div>
                            </div>
                        </div>
                        <div class='flex items-center justify-between'>
                            <span class='text-gray-300'>Astro</span>
                            <div class='w-24 bg-gray-700 rounded-full h-2'>
                                <div
                                    class='bg-gradient-to-r from-purple-600 to-blue-600 h-2 rounded-full'
                                    style='width: 70%'
                                >
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Backend & Tools -->
                <div
                    class='bg-gradient-to-br from-blue-600/10 to-blue-800/10 p-8 rounded-2xl border border-blue-500/20 hover:border-blue-500/40 transition-all duration-300'
                >
                    <h3 class='text-2xl font-bold mb-6 gradient-text'>Backend</h3>
                    <div class='space-y-3'>
                        <div class='flex items-center justify-between'>
                            <span class='text-gray-300'>Node / Express</span>
                            <div class='w-24 bg-gray-700 rounded-full h-2'>
                                <div
                                    class='bg-gradient-to-r from-blue-600 to-purple-600 h-2 rounded-full'
                                    style='width: 95%'
                                >
                                </div>
                            </div>
                        </div>
                        <div class='flex items-center justify-between'>
                            <span class='text-gray-300'>Python</span>
                            <div class='w-24 bg-gray-700 rounded-full h-2'>
                                <div
                                    class='bg-gradient-to-r from-blue-600 to-purple-600 h-2 rounded-full'
                                    style='width: 75%'
                                >
                                </div>
                            </div>
                        </div>
                        <div class='flex items-center justify-between'>
                            <span class='text-gray-300'>PHP</span>
                            <div class='w-24 bg-gray-700 rounded-full h-2'>
                                <div
                                    class='bg-gradient-to-r from-blue-600 to-purple-600 h-2 rounded-full'
                                    style='width: 70%'
                                >
                                </div>
                            </div>
                        </div>
                        <div class='flex items-center justify-between'>
                            <span class='text-gray-300'>Java</span>
                            <div class='w-24 bg-gray-700 rounded-full h-2'>
                                <div
                                    class='bg-gradient-to-r from-blue-600 to-purple-600 h-2 rounded-full'
                                    style='width: 70%'
                                >
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Specializations -->
                <div
                    class='bg-gradient-to-br from-pink-600/10 to-pink-800/10 p-8 rounded-2xl border border-pink-500/20 hover:border-pink-500/40 transition-all duration-300'
                >
                    <h3 class='text-2xl font-bold mb-6 gradient-text'>Specializations</h3>
                    <div class='space-y-3'>
                        <div class='flex items-center justify-between'>
                            <span class='text-gray-300'>Performance</span>
                            <div class='w-24 bg-gray-700 rounded-full h-2'>
                                <div
                                    class='bg-gradient-to-r from-pink-600 to-purple-600 h-2 rounded-full'
                                    style='width: 95%'
                                >
                                </div>
                            </div>
                        </div>
                        <div class='flex items-center justify-between'>
                            <span class='text-gray-300'>Clean code</span>
                            <div class='w-24 bg-gray-700 rounded-full h-2'>
                                <div
                                    class='bg-gradient-to-r from-pink-600 to-purple-600 h-2 rounded-full'
                                    style='width: 90%'
                                >
                                </div>
                            </div>
                        </div>
                        <div class='flex items-center justify-between'>
                            <span class='text-gray-300'>Hex. architecture</span>
                            <div class='w-24 bg-gray-700 rounded-full h-2'>
                                <div
                                    class='bg-gradient-to-r from-pink-600 to-purple-600 h-2 rounded-full'
                                    style='width: 85%'
                                >
                                </div>
                            </div>
                        </div>
                        <div class='flex items-center justify-between'>
                            <span class='text-gray-300'>Scalability</span>
                            <div class='w-24 bg-gray-700 rounded-full h-2'>
                                <div
                                    class='bg-gradient-to-r from-pink-600 to-purple-600 h-2 rounded-full'
                                    style='width: 85%'
                                >
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Additional Skills Section -->
    <section class='py-20 bg-gradient-to-b from-gray-900 to-black'>
        <div class='max-w-6xl mx-auto px-4 sm:px-6 lg:px-8'>
            <div class='text-center mb-16'>
                <h2 class='text-4xl md:text-5xl font-bold mb-6'>
                    <span class='gradient-text'>Additional Technologies</span>
                </h2>
                <div class='w-24 h-1 bg-gradient-to-r from-purple-600 to-blue-600 mx-auto'></div>
            </div>

            <div class='grid md:grid-cols-2 lg:grid-cols-4 gap-6'>
                <div
                    class='bg-white/5 p-6 rounded-xl border border-white/10 hover:border-blue-500/30 transition-all duration-300'
                >
                    <h3 class='text-lg font-semibold text-white mb-2'>Styling</h3>
                    <div class='space-y-1 text-gray-400 text-sm'>
                        <div>• Tailwind CSS</div>
                        <div>• LESS</div>
                        <div>• Sass</div>
                        <div>• Styled components</div>
                    </div>
                </div>

                <div
                    class='bg-white/5 p-6 rounded-xl border border-white/10 hover:border-green-500/30 transition-all duration-300'
                >
                    <h3 class='text-lg font-semibold text-white mb-2'>Tools</h3>
                    <div class='space-y-1 text-gray-400 text-sm'>
                        <div>• Webpack / Vite</div>
                        <div>• Gulp / Rollup</div>
                        <div>• Docker / Podman</div>
                        <div>• Tsup</div>
                    </div>
                </div>

                <div
                    class='bg-white/5 p-6 rounded-xl border border-white/10 hover:border-pink-500/30 transition-all duration-300'
                >
                    <h3 class='text-lg font-semibold text-white mb-2'>Testing</h3>
                    <div class='space-y-1 text-gray-400 text-sm'>
                        <div>• Cypress</div>
                        <div>• Jest</div>
                        <div>• Mocha</div>
                        <div>• Playwright</div>
                    </div>
                </div>

                <div
                    class='bg-white/5 p-6 rounded-xl border border-white/10 hover:border-purple-500/30 transition-all duration-300'
                >
                    <h3 class='text-lg font-semibold text-white mb-2'>Other</h3>
                    <div class='space-y-1 text-gray-400 text-sm'>
                        <div>• AWS</div>
                        <div>• Google Cloud</div>
                        <div>• Supabase</div>
                        <div>• Netlify / Vercel</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <Footer />
</Layout>
