---
import Layout from '../layouts/Layout.astro';
import ParticleBackground from '../components/ParticleBackground.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Users, User, Package, ArrowLeft, ExternalLink } from '@lucide/astro';
---

<Layout title='Projects - David Olmos'>
    <ParticleBackground />

    <Header currentPage='projects' />

    <!-- Projects Hero Section -->
    <section class='pt-32 pb-20 bg-gradient-to-b from-black to-gray-900'>
        <div class='max-w-6xl mx-auto px-4 sm:px-6 lg:px-8'>
            <div class='text-center mb-16'>
                <h1 class='text-5xl md:text-7xl font-bold mb-6'>
                    <span class='gradient-text' transition:name='main-heading'>My Projects</span>
                </h1>
                <p class='text-xl text-gray-400 max-w-2xl mx-auto'>
                    A collection of my work showcasing modern web development, creative solutions, and technical
                    expertise across collaborative projects, personal initiatives, and open-source contributions.
                </p>
                <div class='w-24 h-1 bg-gradient-to-r from-purple-600 to-blue-600 mx-auto mt-8'></div>
            </div>
        </div>
    </section>

    <!-- Collaborative Projects Section -->
    <section class='py-20 bg-gradient-to-b from-gray-900 to-black'>
        <div class='max-w-6xl mx-auto px-4 sm:px-6 lg:px-8'>
            <div class='text-center mb-16'>
                <Users class='w-16 h-16 text-purple-400 mx-auto mb-4' />
                <h2 class='text-4xl md:text-5xl font-bold mb-4'>
                    <span class='gradient-text'>Collaborative Projects</span>
                </h2>
                <p class='text-xl text-gray-400 max-w-2xl mx-auto'>Projects I have contributed to as part of a team</p>
            </div>

            <div class='grid md:grid-cols-2 lg:grid-cols-3 gap-8'>
                <!-- TOUS -->
                <a
                    href='https://tous.com'
                    target='_blank'
                    rel='noopener noreferrer'
                    class='group bg-gradient-to-br from-purple-600/10 to-blue-600/10 p-6 rounded-2xl border border-white/10 hover:border-purple-500/40 transition-all duration-300 hover:scale-105 block'
                >
                    <h3 class='text-xl font-bold mb-2 gradient-text flex items-center gap-2'>
                        TOUS
                        <ExternalLink class='w-5 h-5 text-purple-400 group-hover:text-purple-300' />
                    </h3>
                    <p class='text-gray-400 mb-4'>
                        TOUS is a global jewelry and accessories brand, known for its iconic bear logo and innovative
                        designs. I contributed to the development of their e-commerce platform, focusing on performance
                        and user experience for a worldwide audience.
                    </p>
                    <div class='flex flex-wrap gap-2 mb-4'>
                        <span class='px-3 py-1 bg-yellow-600/20 text-yellow-300 rounded-full text-sm'>JavaScript</span>
                        <span class='px-3 py-1 bg-blue-600/20 text-blue-300 rounded-full text-sm'>LESS</span>
                        <span class='px-3 py-1 bg-green-600/20 text-green-300 rounded-full text-sm'>Spring</span>
                    </div>
                </a>

                <!-- Tuvalum -->
                <a
                    href='https://tuvalum.com/'
                    target='_blank'
                    rel='noopener noreferrer'
                    class='group bg-gradient-to-br from-blue-600/10 to-purple-600/10 p-6 rounded-2xl border border-white/10 hover:border-blue-500/40 transition-all duration-300 hover:scale-105 block'
                >
                    <h3 class='text-xl font-bold mb-2 gradient-text flex items-center gap-2'>
                        Tuvalum
                        <ExternalLink class='w-5 h-5 text-blue-400 group-hover:text-blue-300' />
                    </h3>
                    <p class='text-gray-400 mb-4'>
                        Tuvalum is a leading online marketplace for buying and selling pre-owned bicycles and cycling
                        gear. I helped build scalable web solutions to support their rapid growth and seamless
                        transactions.
                    </p>
                    <div class='flex flex-wrap gap-2 mb-4'>
                        <span class='px-3 py-1 bg-blue-600/20 text-blue-300 rounded-full text-sm'>React</span>
                        <span class='px-3 py-1 bg-purple-600/20 text-purple-300 rounded-full text-sm'>PHP</span>
                        <span class='px-3 py-1 bg-orange-600/20 text-orange-300 rounded-full text-sm'>AWS</span>
                    </div>
                </a>

                <!-- Blinkfire -->
                <a
                    href='https://www.blinkfire.com'
                    target='_blank'
                    rel='noopener noreferrer'
                    class='group bg-gradient-to-br from-green-600/10 to-blue-600/10 p-6 rounded-2xl border border-white/10 hover:border-green-500/40 transition-all duration-300 hover:scale-105 block'
                >
                    <h3 class='text-xl font-bold mb-2 gradient-text flex items-center gap-2'>
                        Blinkfire
                        <ExternalLink class='w-5 h-5 text-green-400 group-hover:text-green-300' />
                    </h3>
                    <p class='text-gray-400 mb-4'>
                        Blinkfire Analytics provides real-time data and analytics for sports sponsorships and digital
                        media. My work focused on building interactive dashboards and data pipelines for actionable
                        insights.
                    </p>
                    <div class='flex flex-wrap gap-2 mb-4'>
                        <span class='px-3 py-1 bg-green-600/20 text-green-300 rounded-full text-sm'>Vue</span>
                        <span class='px-3 py-1 bg-pink-600/20 text-pink-300 rounded-full text-sm'>Sass</span>
                        <span class='px-3 py-1 bg-blue-600/20 text-blue-300 rounded-full text-sm'>Python</span>
                        <span
                            class='px-3 py-1 bg-gradient-to-r from-red-500/20 to-blue-500/20 text-white rounded-full text-sm'
                            >Google Cloud</span
                        >
                    </div>
                </a>
            </div>
        </div>
    </section>

    <!-- Personal Projects Section -->
    <section class='py-20 bg-gradient-to-b from-black to-gray-900'>
        <div class='max-w-6xl mx-auto px-4 sm:px-6 lg:px-8'>
            <div class='text-center mb-16'>
                <User class='w-16 h-16 text-blue-400 mx-auto mb-4' />
                <h2 class='text-4xl md:text-5xl font-bold mb-4'>
                    <span class='gradient-text'>Personal Projects</span>
                </h2>
                <p class='text-xl text-gray-400 max-w-2xl mx-auto'>Projects I have developed independently</p>
            </div>

            <div class='grid md:grid-cols-2 lg:grid-cols-3 gap-8'>
                <!-- CardSentinel -->
                <a
                    href='https://cardsentinel.io'
                    target='_blank'
                    rel='noopener noreferrer'
                    class='group bg-gradient-to-br from-green-600/10 to-blue-600/10 p-6 rounded-2xl border border-white/10 hover:border-green-500/40 transition-all duration-300 hover:scale-105 block'
                >
                    <h3 class='text-xl font-bold mb-2 gradient-text flex items-center gap-2'>
                        CardSentinel
                        <ExternalLink class='w-5 h-5 text-green-400 group-hover:text-green-300' />
                    </h3>
                    <p class='text-gray-400 mb-4'>
                        CardSentinel is a platform for tracking, managing, and valuing collectible trading cards. I
                        designed and developed the entire product, focusing on a seamless user experience and robust
                        data handling.
                    </p>
                    <div class='flex flex-wrap gap-2 mb-4'>
                        <span class='px-3 py-1 bg-green-600/20 text-green-300 rounded-full text-sm'>Nuxt</span>
                        <span class='px-3 py-1 bg-blue-600/20 text-blue-300 rounded-full text-sm'>Tailwind</span>
                        <span class='px-3 py-1 bg-green-500/20 text-green-300 rounded-full text-sm'>Netlify</span>
                    </div>
                </a>

                <!-- CardSentinel API -->
                <a
                    href='https://api.cardsentinel.io'
                    target='_blank'
                    rel='noopener noreferrer'
                    class='group bg-gradient-to-br from-blue-600/10 to-purple-600/10 p-6 rounded-2xl border border-white/10 hover:border-blue-500/40 transition-all duration-300 hover:scale-105 block'
                >
                    <h3 class='text-xl font-bold mb-2 gradient-text flex items-center gap-2'>
                        CardSentinel API
                        <ExternalLink class='w-5 h-5 text-blue-400 group-hover:text-blue-300' />
                    </h3>
                    <p class='text-gray-400 mb-4'>
                        The CardSentinel API powers the CardSentinel platform, providing secure and scalable endpoints
                        for card data, pricing, and user management.
                    </p>
                    <div class='flex flex-wrap gap-2 mb-4'>
                        <span class='px-3 py-1 bg-blue-600/20 text-blue-300 rounded-full text-sm'>TypeScript</span>
                        <span class='px-3 py-1 bg-gray-600/20 text-gray-300 rounded-full text-sm'>Express</span>
                        <span class='px-3 py-1 bg-green-600/20 text-green-300 rounded-full text-sm'>Supabase</span>
                        <span class='px-3 py-1 bg-green-500/20 text-green-300 rounded-full text-sm'>Netlify</span>
                    </div>
                </a>

                <!-- Serveis Nautics Vlc -->
                <a
                    href='https://serveisnauticsvlc.com/'
                    target='_blank'
                    rel='noopener noreferrer'
                    class='group bg-gradient-to-br from-orange-600/10 to-red-600/10 p-6 rounded-2xl border border-white/10 hover:border-orange-500/40 transition-all duration-300 hover:scale-105 block'
                >
                    <h3 class='text-xl font-bold mb-2 gradient-text flex items-center gap-2'>
                        Serveis Nautics Vlc
                        <ExternalLink class='w-5 h-5 text-orange-400 group-hover:text-orange-300' />
                    </h3>
                    <p class='text-gray-400 mb-4'>
                        Serveis Nautics Vlc is a website for a nautical services company in Valencia, featuring booking,
                        service listings, and customer management.
                    </p>
                    <div class='flex flex-wrap gap-2 mb-4'>
                        <span class='px-3 py-1 bg-orange-600/20 text-orange-300 rounded-full text-sm'>Svelte</span>
                        <span class='px-3 py-1 bg-blue-600/20 text-blue-300 rounded-full text-sm'>Tailwind</span>
                        <span class='px-3 py-1 bg-green-500/20 text-green-300 rounded-full text-sm'>Netlify</span>
                    </div>
                </a>
            </div>
        </div>
    </section>

    <!-- NPM Packages Section -->
    <section class='py-20 bg-gradient-to-b from-gray-900 to-black'>
        <div class='max-w-6xl mx-auto px-4 sm:px-6 lg:px-8'>
            <div class='text-center mb-16'>
                <Package class='w-16 h-16 text-yellow-400 mx-auto mb-4' />
                <h2 class='text-4xl md:text-5xl font-bold mb-4'>
                    <span class='gradient-text'>NPM Packages</span>
                </h2>
                <p class='text-xl text-gray-400 max-w-2xl mx-auto'>Open-source packages I have published</p>
            </div>

            <div class='grid md:grid-cols-2 lg:grid-cols-3 gap-8'>
                <!-- Vue Template Populator -->
                <a
                    href='https://www.npmjs.com/package/vue-template-populator'
                    target='_blank'
                    rel='noopener noreferrer'
                    class='group bg-gradient-to-br from-yellow-600/10 to-green-600/10 p-6 rounded-2xl border border-white/10 hover:border-yellow-500/40 transition-all duration-300 hover:scale-105 block'
                >
                    <h3 class='text-xl font-bold mb-2 gradient-text flex items-center gap-2'>
                        Vue Template Populator
                        <ExternalLink class='w-5 h-5 text-yellow-400 group-hover:text-yellow-300' />
                    </h3>
                    <p class='text-gray-400 mb-4'>
                        Vue Template Populator is an NPM package that auto-generates setters and computed getters for
                        your Vue component data props.
                    </p>
                    <div class='flex flex-wrap gap-2 mb-4'>
                        <span class='px-3 py-1 bg-yellow-600/20 text-yellow-300 rounded-full text-sm'>JavaScript</span>
                        <span class='px-3 py-1 bg-blue-600/20 text-blue-300 rounded-full text-sm'>Rollup</span>
                    </div>
                </a>
            </div>
        </div>
    </section>

    <Footer />
</Layout>
