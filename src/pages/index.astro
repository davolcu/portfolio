---
import Layout from '../layouts/Layout.astro';
import ParticleBackground from '../components/ParticleBackground.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Mail, Linkedin, Github, ChevronDown } from '@lucide/astro';
---

<Layout title='David Olmos - Senior Frontend Engineer'>
    <ParticleBackground />

    <Header currentPage='home' />

    <!-- Hero Section -->
    <section id='home' class='min-h-screen flex items-center justify-center relative overflow-hidden'>
        <!-- Animated Background -->
        <div class='absolute inset-0 bg-gradient-to-br from-purple-900/20 via-black to-blue-900/20'></div>
        <div class='absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(102,126,234,0.1),transparent_50%)]'>
        </div>

        <!-- Floating Elements -->
        <div class='absolute top-20 left-20 w-32 h-32 bg-purple-500/20 rounded-full blur-xl animate-float'></div>
        <div
            class='absolute bottom-20 right-20 w-40 h-40 bg-blue-500/20 rounded-full blur-xl animate-float'
            style='animation-delay: -2s;'
        >
        </div>
        <div
            class='absolute top-1/2 left-1/4 w-24 h-24 bg-pink-500/20 rounded-full blur-xl animate-float'
            style='animation-delay: -4s;'
        >
        </div>

        <div class='relative z-10 text-center max-w-4xl mx-auto px-4'>
            <div class='mb-8'>
                <img
                    src='/portfolio.jpeg'
                    alt='David Olmos portrait'
                    class='mx-auto mb-6 w-40 h-40 rounded-full object-cover border-4 border-purple-600/60 shadow-lg'
                    width='160'
                    height='160'
                    loading='eager'
                />
                <h1 class='text-6xl md:text-8xl font-bold mb-6'>
                    <span class='gradient-text' transition:name='main-heading'>David Olmos</span>
                </h1>
                <p class='text-2xl md:text-3xl text-gray-300 mb-8 font-light'>Senior Frontend Engineer</p>
                <p class='text-lg md:text-xl text-gray-400 max-w-2xl mx-auto leading-relaxed'>
                    Iâ€™m passionate about building robust, high-performance applications with modern technologies and
                    clean code. I love architecting scalable solutions using hexagonal architecture and crafting
                    responsive, user-focused interfaces.
                </p>
            </div>

            <div class='flex flex-col sm:flex-row gap-4 justify-center items-center'>
                <a
                    href='/contact'
                    class='bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 text-white px-8 py-4 rounded-full text-lg font-semibold transition-all duration-300 glow hover:scale-105'
                >
                    Get In Touch
                </a>
                <a
                    href='/projects'
                    class='border border-white/20 hover:border-purple-400 text-white px-8 py-4 rounded-full text-lg font-semibold transition-all duration-300 hover:bg-white/5'
                >
                    View Projects
                </a>
            </div>
        </div>
    </section>

    <Footer />
</Layout>
