---
import Layout from '../layouts/Layout.astro';
import ParticleBackground from '../components/ParticleBackground.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Mail, Linkedin, Github, ChevronDown } from '@lucide/astro';
---

<Layout title="David Olmos - Senior Frontend Engineer">
  <ParticleBackground />
  
  <Header currentPage="home" />

  <!-- Hero Section -->
  <section id="home" class="min-h-screen flex items-center justify-center relative overflow-hidden">
    <!-- Animated Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-purple-900/20 via-black to-blue-900/20"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(102,126,234,0.1),transparent_50%)]"></div>
    
    <!-- Floating Elements -->
    <div class="absolute top-20 left-20 w-32 h-32 bg-purple-500/20 rounded-full blur-xl animate-float"></div>
    <div class="absolute bottom-20 right-20 w-40 h-40 bg-blue-500/20 rounded-full blur-xl animate-float" style="animation-delay: -2s;"></div>
    <div class="absolute top-1/2 left-1/4 w-24 h-24 bg-pink-500/20 rounded-full blur-xl animate-float" style="animation-delay: -4s;"></div>
    
    <div class="relative z-10 text-center max-w-4xl mx-auto px-4">
      <div class="mb-8">
        <h1 class="text-6xl md:text-8xl font-bold mb-6">
          <span class="gradient-text" transition:name="main-heading">David Olmos</span>
        </h1>
        <p class="text-2xl md:text-3xl text-gray-300 mb-8 font-light">
          Senior Frontend Engineer
        </p>
        <p class="text-lg md:text-xl text-gray-400 max-w-2xl mx-auto leading-relaxed">
          Crafting exceptional digital experiences with modern web technologies. 
          Passionate about clean code, performance, and user-centered design.
        </p>
      </div>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href="#contact" class="bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 text-white px-8 py-4 rounded-full text-lg font-semibold transition-all duration-300 glow hover:scale-105">
          Get In Touch
        </a>
        <a href="/projects" class="border border-white/20 hover:border-purple-400 text-white px-8 py-4 rounded-full text-lg font-semibold transition-all duration-300 hover:bg-white/5">
          View Projects
        </a>
      </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <ChevronDown class="w-6 h-6 text-white/50" />
    </div>
  </section>





  <!-- Contact Section -->
  <section id="contact" class="py-20 bg-black">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-6">
          <span class="gradient-text">Let's Work Together</span>
        </h2>
        <div class="w-24 h-1 bg-gradient-to-r from-purple-600 to-blue-600 mx-auto"></div>
        <p class="text-xl text-gray-400 mt-6">
          Ready to bring your ideas to life? Let's create something amazing together.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-12">
        <div class="space-y-6">
          <h3 class="text-2xl font-bold gradient-text">Get In Touch</h3>
          <p class="text-gray-300 leading-relaxed">
            I'm always interested in new opportunities and exciting projects. 
            Whether you have a question or just want to say hi, feel free to reach out!
          </p>
          
          <div class="space-y-4">
            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-gradient-to-r from-purple-600 to-blue-600 rounded-full flex items-center justify-center">
                <Mail class="w-6 h-6 text-white" />
              </div>
              <div>
                <p class="font-semibold text-white">Email</p>
                <p class="text-gray-400">david.olmos@example.com</p>
              </div>
            </div>
            
            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-gradient-to-r from-purple-600 to-blue-600 rounded-full flex items-center justify-center">
                <Linkedin class="w-6 h-6 text-white" />
              </div>
              <div>
                <p class="font-semibold text-white">LinkedIn</p>
                <a href="https://www.linkedin.com/in/david-olmos-b99452138/" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-purple-400 transition-colors">
                  David Olmos
                </a>
              </div>
            </div>
            
            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-gradient-to-r from-purple-600 to-blue-600 rounded-full flex items-center justify-center">
                <Github class="w-6 h-6 text-white" />
              </div>
              <div>
                <p class="font-semibold text-white">GitHub</p>
                <a href="https://github.com/davolcu" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-purple-400 transition-colors">
                  @davolcu
                </a>
              </div>
            </div>
          </div>
        </div>
        
        <div class="bg-gradient-to-br from-purple-600/10 to-blue-600/10 p-8 rounded-2xl border border-white/10">
          <form class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-300 mb-2">Name</label>
              <input type="text" id="name" name="name" required 
                     class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-purple-500 transition-colors">
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-gray-300 mb-2">Email</label>
              <input type="email" id="email" name="email" required 
                     class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-purple-500 transition-colors">
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-gray-300 mb-2">Message</label>
              <textarea id="message" name="message" rows="4" required 
                        class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-purple-500 transition-colors resize-none"></textarea>
            </div>
            
            <button type="submit" 
                    class="w-full bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 text-white py-3 px-6 rounded-lg font-semibold transition-all duration-300 glow hover:scale-105">
              Send Message
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
