---
import Layout from '../layouts/Layout.astro';
import ParticleBackground from '../components/ParticleBackground.astro';
import MobileNav from '../components/MobileNav.astro';
import { Mail, Linkedin, Github, Rocket, BarChart3, Palette, ChevronDown } from '@lucide/astro';
---

<Layout title="David Olmos - Senior Frontend Engineer">
  <ParticleBackground />
  
  <!-- Navigation -->
  <nav class="fixed top-0 w-full z-50 bg-black/80 backdrop-blur-md border-b border-white/10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <div class="flex items-center">
          <span class="text-2xl font-bold gradient-text" transition:name="site-title">David Olmos</span>
        </div>
        <div class="hidden md:block">
          <div class="ml-10 flex items-baseline space-x-4">
            <a href="#home" class="text-white hover:text-purple-400 px-3 py-2 rounded-md text-sm font-medium transition-colors">Home</a>
            <a href="#about" class="text-white hover:text-purple-400 px-3 py-2 rounded-md text-sm font-medium transition-colors">About</a>
            <a href="#skills" class="text-white hover:text-purple-400 px-3 py-2 rounded-md text-sm font-medium transition-colors">Skills</a>
            <a href="/projects" class="text-white hover:text-purple-400 px-3 py-2 rounded-md text-sm font-medium transition-colors">Projects</a>
            <a href="#contact" class="bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-all duration-300 glow">Contact</a>
          </div>
        </div>
        <MobileNav />
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section id="home" class="min-h-screen flex items-center justify-center relative overflow-hidden">
    <!-- Animated Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-purple-900/20 via-black to-blue-900/20"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(102,126,234,0.1),transparent_50%)]"></div>
    
    <!-- Floating Elements -->
    <div class="absolute top-20 left-20 w-32 h-32 bg-purple-500/20 rounded-full blur-xl animate-float"></div>
    <div class="absolute bottom-20 right-20 w-40 h-40 bg-blue-500/20 rounded-full blur-xl animate-float" style="animation-delay: -2s;"></div>
    <div class="absolute top-1/2 left-1/4 w-24 h-24 bg-pink-500/20 rounded-full blur-xl animate-float" style="animation-delay: -4s;"></div>
    
    <div class="relative z-10 text-center max-w-4xl mx-auto px-4">
      <div class="mb-8">
        <h1 class="text-6xl md:text-8xl font-bold mb-6">
          <span class="gradient-text" transition:name="main-heading">David Olmos</span>
        </h1>
        <p class="text-2xl md:text-3xl text-gray-300 mb-8 font-light">
          Senior Frontend Engineer
        </p>
        <p class="text-lg md:text-xl text-gray-400 max-w-2xl mx-auto leading-relaxed">
          Crafting exceptional digital experiences with modern web technologies. 
          Passionate about clean code, performance, and user-centered design.
        </p>
      </div>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href="#contact" class="bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 text-white px-8 py-4 rounded-full text-lg font-semibold transition-all duration-300 glow hover:scale-105">
          Get In Touch
        </a>
        <a href="/projects" class="border border-white/20 hover:border-purple-400 text-white px-8 py-4 rounded-full text-lg font-semibold transition-all duration-300 hover:bg-white/5">
          View Projects
        </a>
      </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <ChevronDown class="w-6 h-6 text-white/50" />
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="py-20 bg-gradient-to-b from-black to-gray-900">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-6">
          <span class="gradient-text">About Me</span>
        </h2>
        <div class="w-24 h-1 bg-gradient-to-r from-purple-600 to-blue-600 mx-auto"></div>
      </div>
      
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div class="space-y-6">
          <p class="text-lg text-gray-300 leading-relaxed">
            I'm a passionate senior frontend engineer with extensive experience in modern web development. 
            I specialize in creating performant, scalable, and user-friendly applications using cutting-edge technologies.
          </p>
          <p class="text-lg text-gray-300 leading-relaxed">
            With a strong foundation in Vue.js, React, and modern CSS, I bring creative solutions to complex problems. 
            I believe in writing clean, maintainable code and staying up-to-date with the latest industry trends.
          </p>
          <div class="flex gap-4">
            <a href="https://www.linkedin.com/in/david-olmos-b99452138/" target="_blank" rel="noopener noreferrer" 
               class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-full font-semibold transition-all duration-300 hover:scale-105">
              LinkedIn
            </a>
            <a href="https://github.com/davolcu" target="_blank" rel="noopener noreferrer"
               class="bg-gray-800 hover:bg-gray-700 text-white px-6 py-3 rounded-full font-semibold transition-all duration-300 hover:scale-105">
              GitHub
            </a>
          </div>
        </div>
        
        <div class="relative">
          <div class="bg-gradient-to-br from-purple-600/20 to-blue-600/20 p-8 rounded-2xl border border-white/10">
            <div class="grid grid-cols-2 gap-4">
              <div class="text-center p-4 bg-white/5 rounded-lg">
                <div class="text-3xl font-bold gradient-text">5+</div>
                <div class="text-gray-400">Years Experience</div>
              </div>
              <div class="text-center p-4 bg-white/5 rounded-lg">
                <div class="text-3xl font-bold gradient-text">50+</div>
                <div class="text-gray-400">Projects Completed</div>
              </div>
              <div class="text-center p-4 bg-white/5 rounded-lg">
                <div class="text-3xl font-bold gradient-text">10+</div>
                <div class="text-gray-400">Technologies</div>
              </div>
              <div class="text-center p-4 bg-white/5 rounded-lg">
                <div class="text-3xl font-bold gradient-text">100%</div>
                <div class="text-gray-400">Client Satisfaction</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Skills Section -->
  <section id="skills" class="py-20 bg-black">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-6">
          <span class="gradient-text">Skills & Technologies</span>
        </h2>
        <div class="w-24 h-1 bg-gradient-to-r from-purple-600 to-blue-600 mx-auto"></div>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        <!-- Frontend -->
        <div class="bg-gradient-to-br from-purple-600/10 to-purple-800/10 p-8 rounded-2xl border border-purple-500/20 hover:border-purple-500/40 transition-all duration-300">
          <h3 class="text-2xl font-bold mb-6 gradient-text">Frontend</h3>
          <div class="space-y-3">
            <div class="flex items-center justify-between">
              <span class="text-gray-300">Vue.js / Nuxt</span>
              <div class="w-24 bg-gray-700 rounded-full h-2">
                <div class="bg-gradient-to-r from-purple-600 to-blue-600 h-2 rounded-full" style="width: 95%"></div>
              </div>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-gray-300">React / Next.js</span>
              <div class="w-24 bg-gray-700 rounded-full h-2">
                <div class="bg-gradient-to-r from-purple-600 to-blue-600 h-2 rounded-full" style="width: 90%"></div>
              </div>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-gray-300">TypeScript</span>
              <div class="w-24 bg-gray-700 rounded-full h-2">
                <div class="bg-gradient-to-r from-purple-600 to-blue-600 h-2 rounded-full" style="width: 88%"></div>
              </div>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-gray-300">CSS / Tailwind</span>
              <div class="w-24 bg-gray-700 rounded-full h-2">
                <div class="bg-gradient-to-r from-purple-600 to-blue-600 h-2 rounded-full" style="width: 92%"></div>
              </div>
            </div>
          </div>
        </div>

        <!-- Backend & Tools -->
        <div class="bg-gradient-to-br from-blue-600/10 to-blue-800/10 p-8 rounded-2xl border border-blue-500/20 hover:border-blue-500/40 transition-all duration-300">
          <h3 class="text-2xl font-bold mb-6 gradient-text">Backend & Tools</h3>
          <div class="space-y-3">
            <div class="flex items-center justify-between">
              <span class="text-gray-300">Node.js</span>
              <div class="w-24 bg-gray-700 rounded-full h-2">
                <div class="bg-gradient-to-r from-blue-600 to-purple-600 h-2 rounded-full" style="width: 85%"></div>
              </div>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-gray-300">Git / GitHub</span>
              <div class="w-24 bg-gray-700 rounded-full h-2">
                <div class="bg-gradient-to-r from-blue-600 to-purple-600 h-2 rounded-full" style="width: 90%"></div>
              </div>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-gray-300">Docker</span>
              <div class="w-24 bg-gray-700 rounded-full h-2">
                <div class="bg-gradient-to-r from-blue-600 to-purple-600 h-2 rounded-full" style="width: 75%"></div>
              </div>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-gray-300">CI/CD</span>
              <div class="w-24 bg-gray-700 rounded-full h-2">
                <div class="bg-gradient-to-r from-blue-600 to-purple-600 h-2 rounded-full" style="width: 80%"></div>
              </div>
            </div>
          </div>
        </div>

        <!-- Specializations -->
        <div class="bg-gradient-to-br from-pink-600/10 to-pink-800/10 p-8 rounded-2xl border border-pink-500/20 hover:border-pink-500/40 transition-all duration-300">
          <h3 class="text-2xl font-bold mb-6 gradient-text">Specializations</h3>
          <div class="space-y-3">
            <div class="flex items-center justify-between">
              <span class="text-gray-300">Performance</span>
              <div class="w-24 bg-gray-700 rounded-full h-2">
                <div class="bg-gradient-to-r from-pink-600 to-purple-600 h-2 rounded-full" style="width: 92%"></div>
              </div>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-gray-300">SEO</span>
              <div class="w-24 bg-gray-700 rounded-full h-2">
                <div class="bg-gradient-to-r from-pink-600 to-purple-600 h-2 rounded-full" style="width: 88%"></div>
              </div>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-gray-300">UX/UI Design</span>
              <div class="w-24 bg-gray-700 rounded-full h-2">
                <div class="bg-gradient-to-r from-pink-600 to-purple-600 h-2 rounded-full" style="width: 85%"></div>
              </div>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-gray-300">Testing</span>
              <div class="w-24 bg-gray-700 rounded-full h-2">
                <div class="bg-gradient-to-r from-pink-600 to-purple-600 h-2 rounded-full" style="width: 82%"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>



  <!-- Contact Section -->
  <section id="contact" class="py-20 bg-black">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-6">
          <span class="gradient-text">Let's Work Together</span>
        </h2>
        <div class="w-24 h-1 bg-gradient-to-r from-purple-600 to-blue-600 mx-auto"></div>
        <p class="text-xl text-gray-400 mt-6">
          Ready to bring your ideas to life? Let's create something amazing together.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-12">
        <div class="space-y-6">
          <h3 class="text-2xl font-bold gradient-text">Get In Touch</h3>
          <p class="text-gray-300 leading-relaxed">
            I'm always interested in new opportunities and exciting projects. 
            Whether you have a question or just want to say hi, feel free to reach out!
          </p>
          
          <div class="space-y-4">
            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-gradient-to-r from-purple-600 to-blue-600 rounded-full flex items-center justify-center">
                <Mail class="w-6 h-6 text-white" />
              </div>
              <div>
                <p class="font-semibold text-white">Email</p>
                <p class="text-gray-400">david.olmos@example.com</p>
              </div>
            </div>
            
            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-gradient-to-r from-purple-600 to-blue-600 rounded-full flex items-center justify-center">
                <Linkedin class="w-6 h-6 text-white" />
              </div>
              <div>
                <p class="font-semibold text-white">LinkedIn</p>
                <a href="https://www.linkedin.com/in/david-olmos-b99452138/" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-purple-400 transition-colors">
                  David Olmos
                </a>
              </div>
            </div>
            
            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-gradient-to-r from-purple-600 to-blue-600 rounded-full flex items-center justify-center">
                <Github class="w-6 h-6 text-white" />
              </div>
              <div>
                <p class="font-semibold text-white">GitHub</p>
                <a href="https://github.com/davolcu" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-purple-400 transition-colors">
                  @davolcu
                </a>
              </div>
            </div>
          </div>
        </div>
        
        <div class="bg-gradient-to-br from-purple-600/10 to-blue-600/10 p-8 rounded-2xl border border-white/10">
          <form class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-300 mb-2">Name</label>
              <input type="text" id="name" name="name" required 
                     class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-purple-500 transition-colors">
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-gray-300 mb-2">Email</label>
              <input type="email" id="email" name="email" required 
                     class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-purple-500 transition-colors">
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-gray-300 mb-2">Message</label>
              <textarea id="message" name="message" rows="4" required 
                        class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-purple-500 transition-colors resize-none"></textarea>
            </div>
            
            <button type="submit" 
                    class="w-full bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 text-white py-3 px-6 rounded-lg font-semibold transition-all duration-300 glow hover:scale-105">
              Send Message
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="py-8 bg-black border-t border-white/10">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="text-gray-400 text-sm">
          © 2024 David Olmos. Built with ❤️ using Astro.
        </div>
        <div class="flex space-x-6 mt-4 md:mt-0">
          <a href="https://github.com/davolcu" target="_blank" rel="noopener noreferrer" 
             class="text-gray-400 hover:text-white transition-colors flex items-center gap-2">
            <Github class="w-5 h-5" />
            GitHub
          </a>
          <a href="https://www.linkedin.com/in/david-olmos-b99452138/" target="_blank" rel="noopener noreferrer" 
             class="text-gray-400 hover:text-white transition-colors flex items-center gap-2">
            <Linkedin class="w-5 h-5" />
            LinkedIn
          </a>
        </div>
      </div>
    </div>
  </footer>
</Layout>
